<div class="container feed">
  <div class="feed__top">
    <p>Here are the recent incidents in your area</p>
    <%= render 'search' %>
    <%= render 'buttons' %>
  </div>
  <div class="feed__mid">
    <div class="feed__incidents">
      <% @incidents.each do |incident| %>
        <%= render 'feed_card', incident: incident %>
      <% end %>
    </div>
  </div>
  <div class="feed__bottom">
    <div class="feed__filter">
      <p class="feed__paragraph">Filter by category or date</p>
      <div class="categories">
        <%= render "category_list" %>
      </div>
      <%= render 'date_picker' %>
    </div>
  </div>
</div>
