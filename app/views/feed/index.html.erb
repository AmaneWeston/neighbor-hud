<div class="container feed"  data-controller="active-button">
  <div class="feed__top">
    <p>Here are the recent incidents in your area</p>
    <%= render 'search' %>
    <%= render 'buttons' %>
  </div>
  <div class="feed__mid">
    <%= render 'feed_incidents' %>
  </div>
  <div class="feed__bottom">
    <div class="feed__filter">
      <p class="feed__paragraph">Filter by category or date</p>
      <div class="categories">
        <%= render "/components/categories_list.html.erb" %>
      </div>
      <%= render 'components/date_picker', path: feed_path %>
    </div>
  </div>
</div>
