<div class="p-3">
  <div class="row align-items-start">
    <%= render "incidents/type", incident: @incident %>
    <div class="col-3">
      <%= render "incidents/category", incident: @incident %>
    </div>
    <h1><%= @incident.title %></h1>
  </div>
  <%= render "description", incident: @incident %>
  <% if @incident.source.present? %>
    <%= link_to "Taken from #{@incident.source} <i class='fas fa-external-link-alt ms-1'></i>".html_safe, @incident.url, target: '_blank' %>
  <% end %>
  <div class="d-flex justify-content-between align-items-end mt-2">
    <%= render "incidents/incident_card_bottom", incident: @incident  %>
  </div>
</div>
