<div class="card card--gray" data-report-details-target="detailsCard">
  <div class="report-details">
    <button class="report-details__button"
    type="button"
    data-action="click->report-details#openCard" data-report-details-target="button">
      <i class="fas fa-info-circle"></i>
      Add details *
      <i class="fas fa-angle-up"></i>
    </button>
    <div class="card__body" data-report-details-target="card">
      <%= f.input :title,
                label: false,
                placeholder: "What happened?",
                input_html: {
                  class: "title",
                  data: { "report-details-target": "title" }
                } %>
      <%= f.input :description,
                placeholder: "Share details of your experience (optional)",
                label: false,
                input_html: { class: "description" },
                required: false %>
    </div>
  </div>
</div>
