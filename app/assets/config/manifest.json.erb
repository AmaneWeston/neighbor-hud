{
  "name": "NeighborHUD",
  "description": "A service that aggregates the latest crime news and detects recent trends based on your GPS location. Users can self-report their own incidents.",
  "short_name": "NeighborHUD",
  "display": "fullscreen",
  "start_url": "/",
  "icons": [
    <% files = Dir.entries(Rails.root.join("app/assets/images/icons/")).select {|f| !File.directory? f} %>
    <% files.each_with_index do |file, index| %>
      <% match = file.match(/.+-(?<size>\d{2,3}x\d{2,3}).png/) %>
      {
        "src": "<%= image_path "icons/#{file}" %>",
        "sizes": "<%= match && match[:size] %>",
        "type": "image/png"
      }<%= "," unless (files.size - 1) == index %>
    <% end %>
  ]
}
